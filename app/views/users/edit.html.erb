  <%= @user.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li class = "error-text"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container mx-auto w-50 my-5">
  
    <div class="row"><h2>User info</h2></div>
    <%= form_with model: @user, local: true, method: :patch do |f| %>
    <div class="row">
      <h4>Name</h4>
      <%= f.text_field :name, autofocus: true, placeholder:"名前", style: "width:100%"%>
    </div>
    <div class="row">
      <h4>Introduction</h4>
      <%= f.text_area :introduction, autofocus: true, style: "width:100%" %>
    </div>
    <div class="row flex-column">
      <h4>Image</h4>
      <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p> 
    </div>
    <div class="row">
      <%= f.submit "Update User", class: 'btn btn-secondary' %>
    </div>
    <% end %>
  
</div>

