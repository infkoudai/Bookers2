<div class = "success">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
      <%= image_tag @bookx.user.get_profile_image(80,80) %>
      <table class="table table-striped">
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @bookx.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @bookx.user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(current_user.id) do %>
        <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>
      <% end %>
      <h2>New Book</h2>
      <%= form_with model: @book do |f| %>
      <div>
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
    <div class="col-lg-8">
      <h2>Book Details</h2>
      <table class="table table-striped">
        <tr>
          <th colspan = "1"></th>
          <th>Title</th>
          <th>Body</th>
          <% if @bookx.user == current_user %>
            <th colspan = "2"></th>
          <% end %>
        </tr>
        <tr>
          <td><%= image_tag @bookx.user.get_profile_image(80,80) %></td>
          <td><%= @bookx.title %></td>
          <td><%= @bookx.body %></td>
          <% if @bookx.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@bookx.id), class: 'btn btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@bookx), method: :delete, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
